{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Next.js: 開発サーバー起動",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev",
      "cwd": "${workspaceFolder}",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": [],
      "serverReadyAction": {
        "pattern": "Local:.*?(https?://localhost:3000)",
        "uriFormat": "%s",
        "action": "openExternally"
      }
    }
  ],
  "compounds": [
    {
      "name": "Next.js: 開発サーバー起動 + ブラウザ",
      "configurations": [
        "Next.js: 開発サーバー起動"
      ],
      "preLaunchTask": "wait-and-open-browser"
    }
  ]
}