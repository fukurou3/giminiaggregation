rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function isImage() {
      return request.resource.contentType.matches('image/(jpeg|png|webp)');
    }
    function under2MB() {
      return request.resource.size < 2 * 1024 * 1024;
    }
    function isOwner(uid) {
      return request.auth != null && request.auth.uid == uid;
    }

    // /post-images/{uid}/{imageId}
    match /post-images/{uid}/{imageId} {
      // 読み取り：公開ギャラリーなら true（限定公開にしたいなら条件化）
      allow read: if true;

      // 書き込み：本人のみ & 2MB未満 & 画像のみ & App Check
      allow write: if isOwner(uid) 
                   && isImage() 
                   && under2MB()
                   && request.auth.token.firebase.app_check_token != null;
    }
  }
}