rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /posts/{postId} {
      allow read: if resource.data.isPublic == true;
      allow create: if request.auth != null && request.resource.data.favoriteCount == 0;
      allow update: if request.auth != null &&
        request.auth.uid == resource.data.authorId &&
        request.resource.data.favoriteCount == resource.data.favoriteCount;
      allow delete: if request.auth != null &&
        (request.auth.uid == resource.data.authorId || request.auth.token.admin == true);

      match /favorites/{uid} {
        allow read: if true;
        allow write: if request.auth != null && request.auth.token.admin == true;
      }

      match /favoriteShards/{shardId} {
        allow read: if true;
        allow write: if request.auth != null && request.auth.token.admin == true;
      }
    }

    // Categories collection
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }

    // Tags collection
    match /tags/{tagId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update: if request.auth != null && 
        (request.auth.token.admin == true || 
         (resource.data.keys().hasAny(['views', 'favorites']) && 
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['views', 'favorites', 'count', 'updatedAt'])));
      allow delete: if request.auth != null && request.auth.token.admin == true;

      // Tag reports subcollection
      match /reports/{reportId} {
        allow read: if request.auth != null && request.auth.token.admin == true;
        allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
        allow update, delete: if request.auth != null && request.auth.token.admin == true;
      }
    }

    // Tag category count collection
    match /tagCategoryCount/{countId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
  }
}
